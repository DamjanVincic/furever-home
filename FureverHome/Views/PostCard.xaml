<UserControl x:Class="FureverHome.Views.PostCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" />
            <Image Source="{Binding ImageLink}" Height="100" Margin="5"/>
            <TextBlock Text="{Binding Date, StringFormat='{}{0:MMMM dd, yyyy}'}" Foreground="Gray" />
            <TextBlock Text="{Binding Status}" />
            <TextBlock Text="{Binding IsApproved}" />
        </StackPanel>
    </Border>
</UserControl>
